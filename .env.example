# Path to the SQLite database file
DATABASE_URL="./db.sqlite"

# Secret key used to sign and verify JWT tokens (replace with a strong random value)
AUTH_JWT_SECRET="replace-with-a-strong-random-secret"

# Session expiration duration (both values must represent the same duration)
AUTH_SESSION_EXPIRATION_SECONDS=86400
AUTH_SESSION_EXPIRATION_STRING="1d"

# Name of the cookie used to store the session token
AUTH_COOKIE_NAME="authSession"

# Admin credentials (password must be base64-encoded)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="123"

# Enable or disable admin login
AUTH_ENABLED=false
